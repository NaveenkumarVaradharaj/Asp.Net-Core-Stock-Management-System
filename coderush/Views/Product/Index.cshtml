@{
    ViewData["Title"] = "Product";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-tag"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <ej-grid id="FlatGrid" allow-sorting="true" allow-paging="true" allow-text-wrap="true" enable-alt-row="false" >
                    <e-toolbar-settings show-toolbar="true" toolbar-items='@new List<string> {"add", "edit", "delete", "update", "cancel", "search", "printGrid"}' />
                    <e-edit-settings allow-adding="true" allow-editing="true" allow-deleting="true" show-confirm-dialog= "true"
                    edit-mode="DialogTemplate" dialog-editor-template-id="#editProductGrid"></e-edit-settings>
                    <e-text-wrap-settings wrap-mode="Both"></e-text-wrap-settings>
                    <e-datamanager url="/api/product" offline="true" adaptor="WebApiAdaptor"></e-datamanager>
                    <e-columns>
                        <e-column field="ProductImageUrl" header-text="Image" Template="#colImageTemplate" width="140"></e-column>
                        <e-column field="ProductId" header-text="Product ID" is-primary-key="true" text-align="Right" visible="false" ></e-column>
                        <e-column field="ProductName" header-text="ProductName" ></e-column>
                        <e-column field="Description" header-text="Description" text-align="Left" ></e-column>
                        <e-column field="Barcode" header-text="Barcode" ></e-column>
                        <e-column field="StockCount" header-text="StockCount" formaction="{0:N0}" ></e-column>
                        <e-column field="DefaultSellingPrice" header-text="Selling Price" format="{0:C2}"></e-column>
                        <e-column field="DiscountedSellingPrice" header-text="Discounted Selling Price" format="{0:C2}"></e-column>
                    </e-columns>
                </ej-grid>
                <script type="text/template" id="colImageTemplate">
                    <img src="{{:ProductImageUrl}}" width="120" height="120"/>
                </script>
                <script type="text/template" id="editProductGrid">
                <table cellspacing="10">
                    <tr>
                        <td>
                            Image:
                        </td>
                        <td>
                            <img src="{{:ProductImageUrl}}" width="120" height="120"/><br/>
                            <input type="text" id="ProductImageUrl" name="ProductImageUrl" class="e-field e-ejinputtext" value="{{:ProductImageUrl}}" style="width:200px;height:28px"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            ProductName:
                        </td>
                        <td>
                            <input type="text" id="ProductName" name="ProductName" class="e-field e-ejinputtext" value="{{:ProductName}}" style="width:116px;height:28px"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Description:
                        </td>
                        <td>
                            <input type="text" id="Description" name="Description" class="e-field e-ejinputtext" value="{{:Description}}" style="width:200px;height:28px"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Barcode:
                        </td>
                        <td>
                            <input type="text" id="Barcode" name="Barcode" class="e-field e-ejinputtext" value="{{:Barcode}}" style="width:116px;height:28px"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            StockCount:
                        </td>
                        <td>
                            <input type="text" id="StockCount" name="StockCount" class="e-field e-ejinputtext" value="{{:StockCount}}" style="width:116px;height:28px"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            DefaultSellingPrice:
                        </td>
                        <td>
                            <input type="text" id="DefaultSellingPrice" name="DefaultSellingPrice" class="e-field e-ejinputtext" value="{{:DefaultSellingPrice}}" style="width:116px;height:28px"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            DiscountedSellingPrice:
                        </td>
                        <td>
                            <input type="text" id="DiscountedSellingPrice" name="DiscountedSellingPrice" class="e-field e-ejinputtext" value="{{:DiscountedSellingPrice}}" style="width:116px;height:28px"/>
                        </td>
                    </tr>
                </table>
                </script>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

